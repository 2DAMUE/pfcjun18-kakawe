<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal.Voluntario.Principal.Voluntario_Detalle_Fragment_1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_detalle_foto"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/ic_profile" />


            <View style="@style/low_divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_detalle_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Nombre" />

                <EditText
                    android:id="@+id/et_detalle_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:clickable="false"
                    android:enabled="false"
                    android:gravity="end"
                    android:inputType="text"
                    android:paddingHorizontal="30dp" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_perfil_altura"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="40dp"
                        android:text="Altura" />

                    <EditText
                        android:id="@+id/et_detalle_altura"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:clickable="false"
                        android:enabled="false"
                        android:gravity="end"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="30dp" />

                </LinearLayout>

                <View style="@style/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_perfil_peso"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="40dp"
                        android:text="Peso" />

                    <EditText
                        android:id="@+id/et_detalle_peso"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:clickable="false"
                        android:enabled="false"
                        android:gravity="end"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="30dp" />
                </LinearLayout>

                <View style="@style/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detalle_grSanguineo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="40dp"
                        android:text="Grupo sanguíneo" />

                    <EditText
                        android:id="@+id/et_detalle_gpSanguineo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:clickable="false"
                        android:enabled="false"
                        android:gravity="end"
                        android:inputType="text"
                        android:paddingHorizontal="30dp" />

                </LinearLayout>

                <View style="@style/low_divider" />

                <TextView
                    android:id="@+id/tv_detalle_alergias"
                    style="@style/submenu_perfil"
                    android:text="Alergias" />

                <View style="@style/divider" />

                <TextView
                    android:id="@+id/tv_detalle_medicacion"
                    style="@style/submenu_perfil"
                    android:text="Medicación" />

                <View style="@style/divider" />

                <TextView
                    android:id="@+id/tv_detalle_enfermedades"
                    style="@style/submenu_perfil"
                    android:text="Enfermedades" />

                <View style="@style/divider" />

                <TextView
                    android:id="@+id/tv_detalle_notasMedicas"
                    style="@style/submenu_perfil"
                    android:text="Notas médicas" />

                <View style="@style/low_divider" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_detalle_navegar"
                    style="@style/btn"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_location"
                    android:padding="10dp"
                    android:text="NAVEGAR"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_detalle_llamar"
                    style="@style/btn"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_call"
                    android:padding="10dp"
                    android:text="LLAMAR"
                    android:textSize="18sp" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_detalle_cerrar"
                style="@style/btn"
                android:layout_width="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Atras" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>