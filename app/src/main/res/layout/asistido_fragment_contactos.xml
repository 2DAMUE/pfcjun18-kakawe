<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal.Asistido.Perfil.Asistido_Perfil_Fragment_4_contactos">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <TextView
                android:id="@+id/tv_contactos_contacto1"
                style="@style/subheader"
                android:text="Contacto 1" />

            <ImageView
                android:id="@+id/btn_foto_contacto1"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_contactos_nombre1"
                    style="@style/tv_perfil"
                    android:text="Nombre" />

                <EditText
                    android:id="@+id/et_contactos_nombre1"
                    style="@style/et_perfil"
                    android:hint="Nombre"
                    android:inputType="text" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_contactos_telefono1"
                    style="@style/tv_perfil"
                    android:text="Telefono" />

                <EditText
                    android:id="@+id/et_contactos_telefono1"
                    style="@style/et_perfil"
                    android:hint="000 000 000"
                    android:inputType="phone" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_contactos_contacto2"
                style="@style/subheader"
                android:text="Contacto 2" />

            <ImageView
                android:id="@+id/btn_foto_contacto2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_contactos_nombre2"
                    style="@style/tv_perfil"
                    android:text="Nombre" />

                <EditText
                    android:id="@+id/et_contactos_nombre2"
                    style="@style/et_perfil"
                    android:hint="Nombre"
                    android:inputType="text" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_contactos_telefono2"
                    style="@style/tv_perfil"
                    android:text="Telefono" />

                <EditText
                    android:id="@+id/et_contactos_telefono2"
                    style="@style/et_perfil"
                    android:hint="000 000 000"
                    android:inputType="phone" />

            </LinearLayout>
            <View style="@style/divider" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
