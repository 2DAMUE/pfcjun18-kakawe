<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal.Asistido.Perfil.Asistido_Perfil_Fragment_1">

    <ToggleButton
        android:id="@+id/btn_perfil_modificar_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:textOff="EDITAR"
        android:textOn="GUARDAR" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_perfilUs_fotoUs"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#8BC34A"
                app:civ_shadow_radius="10" />


            <View style="@style/low_divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_perfil_nombre"
                    style="@style/tv_perfil"
                    android:text="Nombre" />

                <EditText
                    android:id="@+id/et_perfil_nombre"
                    style="@style/et_perfil"
                    android:hint="Nombre"
                    android:inputType="text" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_apellido"
                    style="@style/tv_perfil"
                    android:text="Apellido" />

                <EditText
                    android:id="@+id/et_perfil_apellido"
                    style="@style/et_perfil"
                    android:hint="Apellido"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_fnacimiento"
                    style="@style/tv_perfil"
                    android:text="Fecha de nacimiento" />

                <EditText
                    android:id="@+id/et_perfil_fnacimiento"
                    style="@style/et_perfil"
                    android:hint="00/00/0000"
                    android:inputType="date" />
            </LinearLayout>

            <View style="@style/divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_sexo"
                    style="@style/tv_perfil"
                    android:text="Sexo" />

                <EditText
                    android:id="@+id/et_perfil_sexo"
                    style="@style/et_perfil"
                    android:hint="Sexo"
                    android:inputType="text" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_telefono"
                    style="@style/tv_perfil"
                    android:text="Telefono" />

                <EditText
                    android:id="@+id/et_perfil_telefono"
                    style="@style/et_perfil"
                    android:hint="000 000 000"
                    android:inputType="phone" />

            </LinearLayout>


            <View style="@style/low_divider" />

            <TextView
                android:id="@+id/tv_perfil_datosMedicos"
                style="@style/submenu_perfil"
                android:text="Datos médicos" />

            <View style="@style/low_divider" />

            <TextView
                android:id="@+id/tv_perfil_contactos"
                style="@style/submenu_perfil"
                android:text="Contactos de emergencia" />

            <View style="@style/low_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_email"
                    style="@style/tv_perfil"
                    android:text="Email" />

                <EditText
                    android:id="@+id/et_perfil_email"
                    style="@style/et_perfil"
                    android:hint="nombre@correo.com"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <View style="@style/divider" />

            <TextView
                android:id="@+id/tv_perfil_modContrasena"
                style="@style/submenu_perfil"
                android:text="Contraseña" />

            <View style="@style/medium_divider" />


            <Button
                android:id="@+id/btn_perfil_cerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cerrar sesión" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>