<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal.Voluntario.Perfil.Voluntario_Perfil_Fragment_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View style="@style/low_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_nombre"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Nombre" />

                <EditText
                    android:id="@+id/et_perfil_nombre"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="text"
                    android:hint="Nombre" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_apellido"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Apellidos" />

                <EditText
                    android:id="@+id/et_perfil_apellido"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="textPersonName"
                    android:hint="apellidos" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_fnacimiento"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Fecha de nacimiento" />

                <EditText
                    android:id="@+id/et_perfil_fnacimiento"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="date"
                    android:hint="01/01/2001" />
            </LinearLayout>

            <View style="@style/divider" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Sexo" />

                <EditText
                    android:id="@+id/et_perfil_sexo"
                    style="@style/et_perfil"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="text"
                    android:hint="sexo"/>
            </LinearLayout>
            <View style="@style/divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_telefono"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Telefono" />

                <EditText
                    android:id="@+id/et_perfil_telefono"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="phone"
                    android:hint="000 000 000" />

            </LinearLayout>

            <View style="@style/low_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_email"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Email" />

                <EditText
                    android:id="@+id/et_perfil_email"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="textEmailAddress"
                    android:hint="nombre@correo.com" />
            </LinearLayout>

            <View style="@style/divider" />

            <TextView
                android:id="@+id/tv_perfil_modContrasena"
                style="@style/submenu_perfil"
                android:text="Contraseña" />
            <View style="@style/low_divider" />
            <Button
                android:id="@+id/btn_perfil_actualizarDatos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="guardar" />

            <View style="@style/low_divider" />

            <Button
                android:id="@+id/btn_perfil_cerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cerrar sesión" />
            <View style="@style/low_divider" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>