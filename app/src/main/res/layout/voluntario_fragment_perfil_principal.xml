<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal.Voluntario.Perfil.Voluntario_Perfil_Fragment_1">


    <ToggleButton
        android:id="@+id/btn_perfil_modificar_datos"
        style="@style/btn_editar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Nombre" />

                <EditText
                    android:id="@+id/et_perfil_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="end"
                    android:hint="Nombre"
                    android:inputType="text"
                    android:paddingHorizontal="30dp" />

            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_apellido"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Apellidos" />

                <EditText
                    android:id="@+id/et_perfil_apellido"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="end"
                    android:hint="apellidos"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="30dp" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_fnacimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Fecha de nacimiento" />

                <EditText
                    android:id="@+id/et_perfil_fnacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="end"
                    android:hint="01/01/2001"
                    android:inputType="date"
                    android:paddingHorizontal="30dp" />
            </LinearLayout>

            <View style="@style/divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Sexo" />

                <EditText
                    android:id="@+id/et_perfil_sexo"
                    style="@style/et_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="end"
                    android:hint="sexo"
                    android:inputType="text"
                    android:paddingHorizontal="30dp" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Telefono" />

                <EditText
                    android:id="@+id/et_perfil_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="end"
                    android:hint="000 000 000"
                    android:inputType="phone"
                    android:paddingHorizontal="30dp" />

            </LinearLayout>

            <View style="@style/low_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Email" />

                <EditText
                    android:id="@+id/et_perfil_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="end"
                    android:hint="nombre@correo.com"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="30dp" />
            </LinearLayout>

            <View style="@style/divider" />

            <TextView
                android:id="@+id/tv_perfil_modContrasena"
                style="@style/submenu_perfil"
                android:text="ContraseÃ±a" />

            <View style="@style/divider" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>