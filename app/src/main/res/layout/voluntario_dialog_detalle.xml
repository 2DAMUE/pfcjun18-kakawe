<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <View style="@style/low_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_detalle_nombre"
                android:layout_width = "wrap_content"
                android:layout_height = "match_parent"
                android:gravity = "center_vertical"
                android:paddingHorizontal = "40dp"
                android:text="Nombre" />

            <EditText
                android:id="@+id/et_detalle_nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:clickable="false"
                android:enabled="false"
                android:gravity="end"
                android:hint="Nombre"
                android:inputType="text"
                android:paddingHorizontal="30dp" />

        </LinearLayout>

        <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_perfil_altura"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="40dp"
                        android:text="Altura" />

                    <EditText
                        android:id="@+id/et_detalle_altura"
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:backgroundTint = "@android:color/transparent"
                        android:gravity = "end"
                        android:enabled = "false"
                        android:paddingHorizontal = "30dp"
                        android:hint="00.0"
                        android:clickable="false"
                        android:inputType="numberDecimal" />

                </LinearLayout>

                <View style="@style/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_perfil_peso"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="40dp"
                        android:text="Peso" />

                    <EditText
                        android:id="@+id/et_detalle_peso"
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:backgroundTint = "@android:color/transparent"
                        android:gravity = "end"
                        android:enabled = "false"
                        android:paddingHorizontal = "30dp"
                        android:hint="00.0"
                        android:clickable="false"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <View style="@style/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detalle_grSanguineo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="40dp"
                        android:text="Grupo sanguíneo" />
                    <EditText
                        android:id="@+id/et_detalle_gpSanguineo"
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:backgroundTint = "@android:color/transparent"
                        android:gravity = "end"
                        android:enabled = "false"
                        android:paddingHorizontal = "30dp"
                        android:hint="Grupo sanguineo"
                        android:clickable="false"
                        android:inputType="text" />

                </LinearLayout>

                <View style="@style/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_perfil_alergias"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="40dp"
                        android:text="Alérgias" />

                    <EditText
                        android:id="@+id/et_detalle_alergias"
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:backgroundTint = "@android:color/transparent"
                        android:gravity = "end"
                        android:enabled = "false"
                        android:paddingHorizontal = "30dp"
                        android:hint="Alérgias"
                        android:clickable="false"
                        android:inputType="text" />

                </LinearLayout>

                <View style="@style/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_perfil_medicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="40dp"
                        android:text="Medicación" />

                    <EditText
                        android:id="@+id/et_detalle_medicacion"
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:backgroundTint = "@android:color/transparent"
                        android:gravity = "end"
                        android:enabled = "false"
                        android:paddingHorizontal = "30dp"
                        android:hint="Medicación"
                        android:clickable="false"
                        android:inputType="text" />
                </LinearLayout>

                <View style="@style/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_perfil_enfermedades"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="40dp"
                        android:text="Enfermedades" />

                    <EditText
                        android:id="@+id/et_detalle_enfermedades"
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:backgroundTint = "@android:color/transparent"
                        android:gravity = "end"
                        android:enabled = "false"
                        android:paddingHorizontal = "30dp"
                        android:clickable="false"
                        android:hint="Enfermedades"
                        android:inputType="text" />

                </LinearLayout>

                <View style="@style/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_perfil_notasMedicas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="40dp"
                        android:text="Notas médicas" />

                    <EditText
                        android:id="@+id/et_perfil_notasMedicas"
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:backgroundTint = "@android:color/transparent"
                        android:gravity = "end"
                        android:enabled = "false"
                        android:paddingHorizontal = "30dp"
                        android:clickable="false"
                        android:hint="Notas medicas"
                        android:inputType="text" />

                </LinearLayout>


            </LinearLayout>


        <View style="@style/low_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_detalle_navegar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NAVEGAR" />

            <Button
                android:id="@+id/btn_detalle_llamar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LLAMAR" />
        </LinearLayout>
        <View style="@style/divider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_detalle_cerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CERRAR DETALLE" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>