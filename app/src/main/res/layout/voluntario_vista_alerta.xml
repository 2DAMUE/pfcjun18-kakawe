<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grisClarito"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="@color/blanco"
        android:elevation="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/azulAuxinet"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_listado_detalle_marker"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_coffee" />


            <TextView
                android:id="@+id/tv_vista_alertas_tipoAlerta"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="Tipo de alerta"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>





        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_vista_alertas_nombreAsistido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Maria Dolores"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_vista_alertas_distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A 16 km de tu ubicaciÃ³n"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp" />

            </LinearLayout>


            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/ic_profile_details"
                android:background="@color/grisClarito"/>


        </FrameLayout>






    </LinearLayout>
</LinearLayout>