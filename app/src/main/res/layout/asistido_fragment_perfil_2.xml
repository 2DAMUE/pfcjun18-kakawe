<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal.Asistido.Perfil.Asistido_Perfil_Fragment_2_DatosMedicos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View style="@style/low_divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_altura"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Altura"
                    />

                <EditText
                    android:id="@+id/et_perfil_altura"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="numberDecimal"
                    android:hint="00.0" />

            </LinearLayout>
            <View style="@style/divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_peso"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Peso" />

                <EditText
                    android:id="@+id/et_perfil_peso"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="numberDecimal"
                    android:hint="00.0" />
            </LinearLayout>
            <View style="@style/divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_grSanguineo"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Grupo sanguíneo" />

                <Spinner
                    android:id="@+id/spn_perfil_grSanguineo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/gr_sanguineo"
                    android:gravity="right"

                    android:textAlignment="textEnd" />

            </LinearLayout>
            <View style="@style/divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_alergias"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Alérgias" />

                <EditText
                    android:id="@+id/et_perfil_alergias"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="text"
                    android:hint="Alergias" />

            </LinearLayout>
            <View style="@style/divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_medicacion"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Medicación" />

                <EditText
                    android:id="@+id/et_perfil_medicacion"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="text"
                    android:hint="Medicación" />
            </LinearLayout>
            <View style="@style/divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_enfermedades"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Enfermedades" />

                <EditText
                    android:id="@+id/et_perfil_enfermedades"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="text"
                    android:hint="Enfermedades" />

            </LinearLayout>
            <View style="@style/divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_perfil_notasMedicas"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:text="Notas médicas" />

                <EditText
                    android:id="@+id/et_perfil_notasMedicas"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingHorizontal="30dp"
                    android:inputType="text"
                    android:hint="Notas medicas" />

            </LinearLayout>

            <View style="@style/low_divider" />


            <LinearLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_perfil_atras"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancelar" />

                <Button
                    android:id="@+id/btn_perfil_guardar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Aceptar"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>